<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/margin_24dip"
    android:layout_marginRight="@dimen/margin_24dip" >

    <LinearLayout
        android:id="@+id/pop_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_45dip"
            android:background="@color/recognizance_activity_pop_bg"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="@dimen/margin_24dip"
                android:layout_height="@dimen/margin_24dip"
                android:layout_marginLeft="@dimen/margin_12dip"
                android:layout_marginTop="@dimen/margin_12dip"
                android:src="@drawable/pay_type" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_8dip"
                android:layout_marginTop="@dimen/margin_12dip"
                android:text="@string/pop_pay_type"
                android:textSize="@dimen/text_size_18sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1dip"
            android:background="@color/car_detials_text_red" />

        <LinearLayout
      android:id="@+id/item_full_amount_choose"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40dip"
            android:layout_marginLeft="@dimen/margin_8dip"
            android:layout_marginRight="@dimen/margin_8dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_25dip"
                android:layout_marginTop="@dimen/margin_6dip"
                android:layout_weight="1"
                android:text="@string/pop_pay_full"
                android:textColor="@color/car_details_text_grey" />

            <ImageView
               android:id="@+id/full_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/margin_25dip"
                android:layout_marginTop="@dimen/margin_6dip"
                android:src="@drawable/btn_choose_off" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/margin_8dip"
            android:layout_marginRight="@dimen/margin_8dip"
            android:layout_marginTop="@dimen/margin_8dip"
            android:background="@color/my_item_background_color" />

        <LinearLayout
     android:id="@+id/item_staging_choose"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40dip"
            android:layout_marginLeft="@dimen/margin_8dip"
            android:layout_marginRight="@dimen/margin_8dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_25dip"
                android:layout_marginTop="@dimen/margin_6dip"
                android:layout_weight="1"
                android:text="@string/pop_pay_staging"
                android:textColor="@color/car_details_text_grey" />

            <ImageView
               android:id="@+id/staging_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/margin_25dip"
                android:layout_marginTop="@dimen/margin_6dip"
                android:src="@drawable/btn_choose_off" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/margin_8dip"
            android:layout_marginRight="@dimen/margin_8dip"
            android:layout_marginTop="@dimen/margin_8dip"
            android:background="@color/my_item_background_color" />

        <RelativeLayout
              android:id="@+id/pay_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_45dip"
            android:layout_marginLeft="@dimen/margin_8dip"
            android:layout_marginRight="@dimen/margin_8dip" >

            <TextView
              
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/margin_12dip"
                android:layout_marginRight="@dimen/margin_25dip"
                android:layout_marginTop="@dimen/margin_12dip"
                android:text="@string/pop_pay_confirm" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout><!-- From: file:/E:/studio-work-space/fenqipai/res/layout/popupwindows_pay_type.xml -->