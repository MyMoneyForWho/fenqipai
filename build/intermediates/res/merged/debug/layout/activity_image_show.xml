<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    android:orientation="vertical" >

    <com.fenqipai.fenqipaiandroid.view.TitleBarView
        android:id="@+id/photo_titleBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_48dip" >
    </com.fenqipai.fenqipaiandroid.view.TitleBarView>

    <com.fenqipai.fenqipaiandroid.view.HorizontalListView
        android:id="@+id/hor_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_48dip"
        android:background="@color/onlookers_background_color" >
    </com.fenqipai.fenqipaiandroid.view.HorizontalListView>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_0.5dip"
        android:background="@color/gray_color_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10dip"
        android:background="@drawable/bg_fragment_chamfer"
        android:orientation="vertical" >

        <com.fenqipai.fenqipaiandroid.view.photo.HackyViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_221dip"
            android:background="@android:color/white"
            android:layout_marginLeft="@dimen/margin_0.1dip"
            android:layout_marginRight="@dimen/margin_0.1dip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_34dip"
            android:background="@color/onlookers_background_color"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/margin_0.1dip"
            android:layout_marginRight="@dimen/margin_0.1dip" >

            <TextView
                android:id="@+id/num"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_34dip"
                android:gravity="center"
                android:textColor="@color/car_detials_name_text"
                android:textSize="@dimen/text_size_16sp"
                android:visibility="gone" />
        </LinearLayout>

        <GridView
            android:id="@+id/grid_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:horizontalSpacing="@dimen/margin_5dip"
            android:listSelector="@android:color/transparent"
            android:numColumns="3"
            android:scrollbars="none"
            android:verticalSpacing="@dimen/margin_10dip"
            android:layout_marginTop="@dimen/margin_10dip"
            android:layout_marginBottom="@dimen/margin_10dip"
            android:layout_marginLeft="@dimen/margin_5dip"
            android:layout_marginRight="@dimen/margin_5dip" />
    </LinearLayout>

</LinearLayout><!-- From: file:/E:/studio-work-space/fenqipai/res/layout/activity_image_show.xml -->