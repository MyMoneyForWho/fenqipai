<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_12dip"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="@dimen/margin_16dip"
            android:layout_height="@dimen/margin_14dip"
            android:src="@drawable/img_nub" />

        <TextView
            android:id="@+id/lot_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_14dip"
            android:layout_weight="1"
            android:textColor="@color/car_details_text_grey"
            android:textSize="@dimen/text_size_12sp" />

        <View
            android:layout_width="@dimen/margin_2dip"
            android:layout_height="@dimen/margin_12dip"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/margin_6dip"
            android:background="@color/car_detials_text_red" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/margin_12dip"
            android:text="已冻结"
            android:textColor="@color/car_detials_text_red" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_10dip"
        android:layout_marginTop="@dimen/margin_6dip"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/car_img"
            android:layout_width="129dp"
            android:layout_height="81dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_10dip"
            android:contentDescription="@string/app_name"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_26dip"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/car_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/text_size_14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" 
                android:layout_marginTop="@dimen/margin_12dip">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/img_time_s" />

                <TextView
                    android:id="@+id/auction_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_6dip"
                    android:textColor="@color/car_details_text_grey"
                    android:textSize="@dimen/text_size_14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_12dip" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/img_pai" />

                <TextView
                    android:id="@+id/deposit_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_6dip"
                    android:textColor="@color/car_details_text_grey"
                    android:textSize="@dimen/text_size_14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" 
                android:layout_marginTop="@dimen/margin_12dip">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="¥"
                    android:textColor="@color/car_detials_text_red"
                    android:textSize="@dimen/text_size_14sp"  />

                <TextView
                    android:id="@+id/deposit_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_10dip"
                    android:textColor="@color/car_details_text_grey"
                    android:textSize="@dimen/text_size_14sp" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_deposit_back"
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_26dip"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_20dip"
            android:layout_weight="0.5"
            android:background="@drawable/btn_b_bg"
            android:text="@string/btn_deposit_back"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_12sp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/small_margin_top"
        android:orientation="horizontal" >

        <View
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/my_item_background_color" />
    </LinearLayout>

</LinearLayout><!-- From: file:/E:/studio-work-space/fenqipai/res/layout/item_recognizance_listview.xml -->