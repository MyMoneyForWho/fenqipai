<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_hot_listview"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="@dimen/margin_231dip"
        android:layout_height="wrap_content" >

        <com.fenqipai.fenqipaiandroid.view.RoundedImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_130dip"
            android:scaleType="fitXY"
            app:riv_corner_radius_bottom_left="@dimen/margin_5dip"
            app:riv_corner_radius_top_left="@dimen/margin_5dip" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/margin_5dip"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_sanjiao" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_26dip" >

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_5dip"
                android:ellipsize="end"
                android:maxEms="6"
                android:singleLine="true"
                android:textColor="@color/car_detials_name_text"
                android:textSize="@dimen/text_size_16sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_26dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_5dip"
                android:text="@string/lookers"
                android:textColor="@color/car_details_text_grey"
                android:textSize="@dimen/text_size_12sp" />

            <TextView
                android:id="@+id/lookers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_5dip"
                android:textColor="@color/car_details_text_grey"
                android:textSize="@dimen/text_size_12sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_26dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_5dip"
                android:text="@string/starting_price"
                android:textColor="@color/car_details_text_grey"
                android:textSize="@dimen/text_size_12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_26dip" >

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/margin_5dip"
                android:textColor="@color/car_text_orange"
                android:textSize="@dimen/text_size_18sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_26dip"
                android:layout_gravity="center_vertical" >

                <ImageView
                    android:id="@+id/auctionType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_5dip"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/icon_gaopai" />
            </RelativeLayout>
            
            <View 
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon_jingpai_jiaobiao" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout><!-- From: file:/E:/studio-work-space/fenqipai/res/layout/item_homefragment.xml -->