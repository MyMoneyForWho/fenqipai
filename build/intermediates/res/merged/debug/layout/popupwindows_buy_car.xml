<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pop_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_24dip"
    android:layout_marginRight="@dimen/margin_24dip"
    android:background="@drawable/bg_details_pop"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_45dip"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_20dip"
            android:layout_marginTop="@dimen/margin_12dip"
            android:text="@string/input_your_phone"
            android:textSize="@dimen/text_size_18sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1dip"
        android:layout_marginLeft="@dimen/margin_10dip"
        android:layout_marginRight="@dimen/margin_10dip"
        android:background="@color/car_text_orange" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_45dip"
        android:layout_marginLeft="@dimen/margin_20dip"
        android:layout_marginRight="@dimen/margin_20dip"
        android:layout_marginTop="@dimen/margin_15dip"
        android:background="@drawable/bookcar_input_bg" >

        <EditText
            android:id="@+id/popup_mobile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@null"
            android:inputType="number"
            android:textColor="@color/car_text_orange"
            android:textSize="@dimen/text_size_20sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_20dip"
        android:layout_marginRight="@dimen/margin_20dip"
        android:layout_marginTop="@dimen/margin_15dip"
        android:text="@string/buy_car_content"
        android:textColor="@color/car_detials_price_et" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_35dip"
        android:layout_marginBottom="@dimen/margin_15dip"
        android:layout_marginRight="@dimen/margin_10dip"
        android:layout_marginTop="@dimen/margin_15dip" >

        <TextView
            android:id="@+id/pop_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_10dip"
            android:background="@drawable/bg_bookcar_confirm"
            android:padding="@dimen/margin_8dip"
            android:text="@string/buy_car_confirm"
            android:textColor="@color/car_text_orange" />
    </RelativeLayout>

</LinearLayout>