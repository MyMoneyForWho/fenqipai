<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_10dip"
        android:background="@color/transparent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_fragment_chamfer"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_191dip"
            android:layout_marginLeft="@dimen/margin_0.1dip"
            android:layout_marginRight="@dimen/margin_0.1dip" >

            <com.fenqipai.fenqipaiandroid.view.RoundedImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                app:riv_corner_radius_top_left="@dimen/margin_5dip"
                app:riv_corner_radius_top_right="@dimen/margin_5dip" />

            <ImageView
                android:id="@+id/carstatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_15dip"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon_new_car" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/margin_10dip"
                android:src="@drawable/icon_sanjiao_up" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_0.1dip"
            android:layout_marginLeft="@dimen/margin_0.1dip"
            android:layout_marginRight="@dimen/margin_0.1dip"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/margin_112dip"
                android:layout_weight="2"
                android:background="@drawable/bg_insurance" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_28dip"
                        android:layout_marginLeft="@dimen/margin_10dip" >

                        <TextView
                            android:id="@+id/car_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:textColor="@color/car_detials_name_text"
                            android:textSize="@dimen/text_size_16sp" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_28dip"
                        android:layout_marginLeft="@dimen/margin_10dip"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/start_price_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/installment_sale_price"
                            android:textColor="@color/car_detials_price_et"
                            android:textSize="@dimen/text_size_14sp" />

                        <TextView
                            android:id="@+id/start_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/car_detials_name_text"
                            android:textSize="@dimen/text_size_14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_28dip"
                        android:layout_marginLeft="@dimen/margin_10dip"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/extract_car_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/extract_car_price"
                            android:textColor="@color/car_detials_price_et"
                            android:textSize="@dimen/text_size_14sp" />

                        <TextView
                            android:id="@+id/extract_car_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/car_detials_text_red"
                            android:textSize="@dimen/text_size_16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_28dip"
                        android:layout_marginLeft="@dimen/margin_10dip"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/icon_approve" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/margin_10dip"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/icon_sanjiao_left" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/margin_112dip"
                android:layout_weight="1"
                android:background="@drawable/bg_tax"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_17dip"
                    android:layout_marginLeft="@dimen/margin_10dip"
                    android:layout_marginTop="@dimen/margin_5dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/shoufu_price_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/shoufu_price_text"
                        android:textColor="@color/car_details_text_grey"
                        android:textSize="@dimen/text_size_10sp" />

                    <TextView
                        android:id="@+id/shoufu_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/car_text_orange"
                        android:textSize="@dimen/text_size_10sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_17dip"
                    android:layout_marginLeft="@dimen/margin_10dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/rent_price_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/rent_price_text"
                        android:textColor="@color/car_details_text_grey"
                        android:textSize="@dimen/text_size_10sp" />

                    <TextView
                        android:id="@+id/rent_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/car_text_orange"
                        android:textSize="@dimen/text_size_10sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_17dip"
                    android:layout_marginLeft="@dimen/margin_10dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/term_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/term_text"
                        android:textColor="@color/car_details_text_grey"
                        android:textSize="@dimen/text_size_10sp" />

                    <TextView
                        android:id="@+id/term"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/car_text_orange"
                        android:textSize="@dimen/text_size_10sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_17dip"
                    android:layout_marginLeft="@dimen/margin_10dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/gps_price_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/gps_price_text"
                        android:textColor="@color/car_details_text_grey"
                        android:textSize="@dimen/text_size_10sp" />

                    <TextView
                        android:id="@+id/gps_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/car_text_orange"
                        android:textSize="@dimen/text_size_10sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_17dip"
                    android:layout_marginLeft="@dimen/margin_10dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tax_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/tax_text"
                        android:textColor="@color/car_details_text_grey"
                        android:textSize="@dimen/text_size_10sp" />

                    <TextView
                        android:id="@+id/tax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/car_text_orange"
                        android:textSize="@dimen/text_size_10sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_17dip"
                    android:layout_marginBottom="@dimen/margin_5dip"
                    android:layout_marginLeft="@dimen/margin_10dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/insurance_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/insurance_text"
                        android:textColor="@color/car_details_text_grey"
                        android:textSize="@dimen/text_size_10sp" />

                    <TextView
                        android:id="@+id/insurance_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/car_text_orange"
                        android:textSize="@dimen/text_size_10sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout><!-- From: file:/E:/studio-work-space/fenqipai/res/layout/item_installment.xml -->