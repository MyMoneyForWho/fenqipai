<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_45dip"
    android:minHeight="@dimen/margin_45dip"
    android:orientation="horizontal"
    android:id="@+id/bank_LinearLayout" >
    
    <ImageView
        android:id="@+id/item_bank_img" 
        android:layout_width="@dimen/margin_34dip"
        android:layout_height="@dimen/margin_34dip"
        android:layout_margin="@dimen/margin_5dip"
        android:visibility="gone"/>
    
    <TextView 
        android:id="@+id/item_bank_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"/>
    
    <ImageView 
        android:id="@+id/item_bank_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_choose_off"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/margin_5dip"/>
    
    
    
    

</LinearLayout>
