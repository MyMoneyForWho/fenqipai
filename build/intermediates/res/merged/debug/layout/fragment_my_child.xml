<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/service_background_color"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_190dip"
        android:background="@drawable/img_bg_car"
        android:orientation="vertical" >

        <!-- 照片 -->

        <LinearLayout
            android:id="@+id/my_fra_lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20dip"
            android:orientation="vertical" >

            <com.fenqipai.fenqipaiandroid.view.CircleImageView
                android:id="@+id/my_img"
                android:layout_width="@dimen/margin_75dip"
                android:layout_height="@dimen/margin_75dip"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/user"
                app:border_color="#00000000"
                app:border_width="@dimen/my_head_portrait_padding" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_47dip"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/my_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/click_to_login"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_18sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- 占位 -->

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- 两个方块区域 -->

        <LinearLayout
            android:id="@+id/return_information"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_48dip"
            android:background="#30ffffff"
            android:orientation="horizontal"
            android:visibility="visible" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal" >

                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="辽宁省·大连市"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_14sp" />
            </LinearLayout>

            <View
                android:layout_width="@dimen/margin_1dip"
                android:layout_height="@dimen/margin_14dip"
                android:layout_gravity="center_vertical"
                android:background="@color/white_color" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal" >

                <TextView
                    android:id="@+id/id_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="身份认证：审核中"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_14sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!-- 圆角区域1 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10dip"
        android:layout_marginRight="@dimen/margin_10dip"
        android:layout_marginTop="@dimen/margin_10dip"
        android:background="@drawable/bg_fragment_chamfer"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_48dip"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10dip"
                android:layout_marginTop="@dimen/margin_10dip"
                android:src="@drawable/img_money" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_5dip"
                android:text="@string/my_money"
                android:textColor="@color/car_text_orange"
                android:textSize="@dimen/text_size_18sp" />
        </LinearLayout>

        <!-- 红线 -->

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1dip"
            android:layout_marginLeft="@dimen/margin_5dip"
            android:layout_marginRight="@dimen/margin_5dip"
            android:background="@color/orange_color" />

        <com.fenqipai.fenqipaiandroid.view.MyItemView
            android:id="@+id/margin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_height"
            app:item_status="0" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_0.5dip"
            android:layout_marginLeft="@dimen/margin_10dip"
            android:layout_marginRight="@dimen/margin_10dip"
            android:background="@color/gray_color_line" />

        <com.fenqipai.fenqipaiandroid.view.MyItemView
            android:id="@+id/bank_card"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_height"
            app:item_status="0" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_0.5dip"
            android:layout_marginLeft="@dimen/margin_10dip"
            android:layout_marginRight="@dimen/margin_10dip"
            android:background="@color/gray_color_line" />

        <com.fenqipai.fenqipaiandroid.view.MyItemView
            android:id="@+id/change_record"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_height"
            app:item_status="0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10dip"
        android:layout_marginRight="@dimen/margin_10dip"
        android:layout_marginTop="@dimen/margin_10dip"
        android:background="@drawable/bg_fragment_chamfer"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_48dip"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10dip"
                android:layout_marginTop="@dimen/margin_10dip"
                android:src="@drawable/img_order" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_5dip"
                android:text="@string/order_list"
                android:textColor="@color/car_text_orange"
                android:textSize="@dimen/text_size_18sp" />
        </LinearLayout>
        <!-- 红线 -->

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1dip"
            android:layout_marginLeft="@dimen/margin_5dip"
            android:layout_marginRight="@dimen/margin_5dip"
            android:background="@color/orange_color" />

        <com.fenqipai.fenqipaiandroid.view.MyItemView
            android:id="@+id/order_information"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_height"
            app:item_status="0" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_0.5dip"
            android:layout_marginLeft="@dimen/margin_10dip"
            android:layout_marginRight="@dimen/margin_10dip"
            android:background="@color/gray_color_line" />

        <com.fenqipai.fenqipaiandroid.view.MyItemView
            android:id="@+id/instalment_bill"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_height"
            app:item_status="0" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_0.5dip"
            android:layout_marginLeft="@dimen/margin_10dip"
            android:layout_marginRight="@dimen/margin_10dip"
            android:background="@color/gray_color_line" />

        <com.fenqipai.fenqipaiandroid.view.MyItemView
            android:id="@+id/pay_information"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_height"
            app:item_status="0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10dip"
        android:background="@drawable/bg_fragment_chamfer"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_48dip"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10dip"
                android:layout_marginTop="@dimen/margin_10dip"
                android:src="@drawable/img_settings" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_5dip"
                android:text="@string/my_set"
                android:textColor="@color/car_text_orange"
                android:textSize="@dimen/text_size_18sp" />
        </LinearLayout>
        <!-- 红线 -->

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1dip"
            android:layout_marginLeft="@dimen/margin_5dip"
            android:layout_marginRight="@dimen/margin_5dip"
            android:background="@color/orange_color" />

        <com.fenqipai.fenqipaiandroid.view.MyItemView
            android:id="@+id/account_management"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_height"
            app:item_status="0" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_0.5dip"
            android:layout_marginLeft="@dimen/margin_10dip"
            android:layout_marginRight="@dimen/margin_10dip"
            android:background="@color/gray_color_line" />

        <com.fenqipai.fenqipaiandroid.view.MyItemView
            android:id="@+id/system_settings"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_height"
            app:item_status="0" />
    </LinearLayout>

</LinearLayout>