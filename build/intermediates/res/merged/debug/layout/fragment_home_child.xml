<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <com.fenqipai.fenqipaiandroid.view.viewpager.CycleViewPager
        android:id="@+id/cycle_viewpager_content"
        android:name="com.fenqipai.fenqipaiandroid.view.viewpager.CycleViewPager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_192dip" >
    </com.fenqipai.fenqipaiandroid.view.viewpager.CycleViewPager>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_0.3dip"
        android:background="@color/gray_color_line" />

    <RelativeLayout
        android:id="@+id/to_location"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_48dip"
        android:layout_margin="@dimen/margin_10dip"
        android:background="@drawable/bg_look_car" >

        <ImageView
            android:id="@+id/zhanxun_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_5dip"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_zhanxun" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10dip"
            android:layout_toRightOf="@+id/zhanxun_img"
            android:text="@string/zhanxun"
            android:textColor="@color/look_car_bg_color" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_5dip"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_right" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_0.3dip"
        android:background="@color/hot_car_ling" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_color"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_48dip"
            android:layout_marginLeft="@dimen/margin_10dip"
            android:layout_marginRight="@dimen/margin_10dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/homefragment_hot_car"
                android:textColor="@color/car_detials_name_text"
                android:textSize="@dimen/text_size_18sp" />

            <TextView
                android:id="@+id/more_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingBottom="@dimen/margin_10dip"
                android:paddingTop="@dimen/margin_10dip"
                android:text="@string/homefragment_more_car"
                android:textColor="@color/car_detials_price_et"
                android:textSize="@dimen/text_size_10sp" />
        </RelativeLayout>

        <com.fenqipai.fenqipaiandroid.view.NoScrollListView
            android:id="@+id/hot_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_20dip"
            android:layout_marginLeft="@dimen/margin_10dip"
            android:layout_marginRight="@dimen/margin_10dip"
            android:divider="@color/transparent"
            android:dividerHeight="@dimen/margin_10dip"
            android:listSelector="@color/transparent"
            android:scrollbars="none" >
        </com.fenqipai.fenqipaiandroid.view.NoScrollListView>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_0.1dip"
        android:background="@color/hot_car_ling" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_10dip"
        android:layout_marginTop="@dimen/margin_10dip"
        android:background="@color/white_color"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_0.1dip"
            android:background="@color/hot_car_ling" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_48dip"
            android:layout_marginLeft="@dimen/margin_10dip"
            android:layout_marginRight="@dimen/margin_10dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/homefragment_news"
                android:textSize="@dimen/text_size_18sp" />

            <TextView
                android:id="@+id/more_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingBottom="@dimen/margin_10dip"
                android:paddingTop="@dimen/margin_10dip"
                android:text="@string/homefragment_more_car"
                android:textColor="@color/car_detials_price_et"
                android:textSize="@dimen/text_size_10sp" />
        </RelativeLayout>

        <com.fenqipai.fenqipaiandroid.view.NoScrollListView
            android:id="@+id/news_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_10dip"
            android:layout_marginLeft="@dimen/margin_10dip"
            android:layout_marginRight="@dimen/margin_10dip"
            android:divider="@null"
            android:listSelector="@color/transparent"
            android:scrollbars="none" >
        </com.fenqipai.fenqipaiandroid.view.NoScrollListView>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_0.1dip"
            android:background="@color/hot_car_ling" />
    </LinearLayout>

</LinearLayout><!-- From: file:/E:/studio-work-space/fenqipai/res/layout/fragment_home_child.xml -->