<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/account_manager_lin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bill_bg_color"
    android:orientation="vertical"
    tools:context=".AddPriceActivity" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <com.fenqipai.fenqipaiandroid.view.TitleBarView
                android:id="@+id/cart_titleBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </com.fenqipai.fenqipaiandroid.view.TitleBarView>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_10dip"
                        android:layout_marginRight="@dimen/margin_10dip"
                        android:layout_marginTop="@dimen/margin_10dip"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_fragment_chamfer"
                            android:orientation="vertical"
                            android:visibility="visible" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_48dip"
                                android:layout_marginLeft="@dimen/margin_10dip"
                                android:layout_marginRight="@dimen/margin_10dip"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="@string/account_management_title"
                                    android:textColor="@color/car_detials_name_text"
                                    android:textSize="@dimen/text_size_18sp" />
                                
                                <TextView 
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="（*为必填项）"
                                    android:textColor="@color/car_text_orange"/>
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_1dip"
                                android:layout_marginLeft="@dimen/margin_5dip"
                                android:layout_marginRight="@dimen/margin_5dip"
                                android:background="@color/car_text_orange" />

                            <LinearLayout
                                android:id="@+id/image"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_96dip"
                                android:background="@drawable/layout_selector"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/margin_15dip"
                                    android:text="@string/head_portrait"
                                    android:textColor="@color/car_detials_name_text"
                                    android:textSize="@dimen/text_size_16sp" />

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1" />

                                <com.fenqipai.fenqipaiandroid.view.CircleImageView
                                    android:id="@+id/my_img"
                                    android:layout_width="@dimen/margin_65dip"
                                    android:layout_height="@dimen/margin_65dip"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="@dimen/margin_10dip"
                                    android:src="@drawable/user"
                                    app:border_color="#00000000"
                                    app:border_width="@dimen/my_head_portrait_padding" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="@dimen/margin_15dip"
                                    android:src="@drawable/details" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_0.5dip"
                                android:layout_marginLeft="@dimen/margin_10dip"
                                android:layout_marginRight="@dimen/margin_10dip"
                                android:background="@color/gray_line"
                                android:visibility="visible" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_48dip"
                                android:layout_marginLeft="@dimen/margin_15dip"
                                android:layout_marginRight="@dimen/margin_15dip"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="@string/user_name"
                                    android:textColor="@color/car_detials_name_text"
                                    android:textSize="@dimen/text_size_16sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="*"
                                    android:textColor="@color/car_text_orange" />

                                <EditText
                                    android:id="@+id/pet_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/margin_35dip"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/margin_15dip"
                                    android:background="@drawable/bg_withdrawals_et"
                                    android:inputType="text"
                                    android:hint="@string/input_nick_name"
                                    android:paddingLeft="@dimen/margin_15dip"
                                    android:textColor="@color/car_detials_name_text"
                                    android:textColorHint="@color/gray_color_line"
                                    android:textSize="@dimen/text_size_14sp" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_0.5dip"
                                android:layout_marginLeft="@dimen/margin_10dip"
                                android:layout_marginRight="@dimen/margin_10dip"
                                android:background="@color/gray_color_line" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_48dip"
                                android:layout_marginLeft="@dimen/margin_15dip"
                                android:layout_marginRight="@dimen/margin_15dip"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="@string/e_mail"
                                    android:textColor="@color/car_detials_name_text"
                                    android:textSize="@dimen/text_size_16sp" />

                                <EditText
                                    android:id="@+id/e_mail"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/margin_35dip"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/margin_15dip"
                                    android:background="@drawable/bg_withdrawals_et"
                                    android:hint="@string/input_your_email"
                                    android:paddingLeft="@dimen/margin_15dip"
                                    android:textColor="@color/car_detials_name_text"
                                    android:textColorHint="@color/gray_color_line"
                                    android:textSize="@dimen/text_size_14sp" />
                            </LinearLayout>
                        </LinearLayout>
                        <!-- 上端结束 -->

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/margin_10dip" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_fragment_chamfer"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_48dip"
                                android:layout_marginLeft="@dimen/margin_10dip"
                                android:layout_marginRight="@dimen/margin_10dip"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="@string/person_info"
                                    android:textColor="@color/car_detials_name_text"
                                    android:textSize="@dimen/text_size_18sp" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_1dip"
                                android:layout_marginLeft="@dimen/margin_5dip"
                                android:layout_marginRight="@dimen/margin_5dip"
                                android:background="@color/car_text_orange" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_48dip"
                                android:layout_marginLeft="@dimen/margin_15dip"
                                android:layout_marginRight="@dimen/margin_15dip"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="@string/auth_truename"
                                    android:textColor="@color/car_detials_name_text"
                                    android:textSize="@dimen/text_size_16sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="*"
                                    android:textColor="@color/car_text_orange" />

                                <EditText
                                    android:id="@+id/true_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/margin_35dip"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/margin_15dip"
                                    android:background="@drawable/bg_withdrawals_et"
                                    android:hint="@string/input_true_name"
                                    android:paddingLeft="@dimen/margin_15dip"
                                    android:textColor="@color/car_detials_name_text"
                                    android:textColorHint="@color/gray_color_line"
                                    android:textSize="@dimen/text_size_14sp" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_0.5dip"
                                android:layout_marginLeft="@dimen/margin_10dip"
                                android:layout_marginRight="@dimen/margin_10dip"
                                android:background="@color/gray_color_line" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_48dip"
                                android:layout_marginLeft="@dimen/margin_15dip"
                                android:layout_marginRight="@dimen/margin_15dip"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="@string/info_sex"
                                    android:textColor="@color/car_detials_name_text"
                                    android:textSize="@dimen/text_size_16sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="*"
                                    android:textColor="@color/car_text_orange" />

                                <LinearLayout
                                    android:id="@+id/sex_linearlayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/margin_35dip"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/margin_15dip"
                                    android:background="@drawable/bg_withdrawals_et"
                                    android:orientation="horizontal" >

                                    <TextView
                                        android:id="@+id/sex"
                                        android:layout_width="0dp"
                                        android:layout_height="@dimen/margin_35dip"
                                        android:layout_marginLeft="@dimen/margin_15dip"
                                        android:layout_weight="1"
                                        android:gravity="center_vertical"
                                        android:text="@string/input_sex"
                                        android:textColor="@color/gray_color_line"
                                        android:textSize="@dimen/text_size_14sp" />

                                    <ImageView
                                        android:id="@+id/more_bank"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginRight="@dimen/margin_10dip"
                                        android:contentDescription="@string/app_name"
                                        android:src="@drawable/icon_down" />
                                </LinearLayout>
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_0.5dip"
                                android:layout_marginLeft="@dimen/margin_10dip"
                                android:layout_marginRight="@dimen/margin_10dip"
                                android:background="@color/gray_color_line" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_48dip"
                                android:layout_marginLeft="@dimen/margin_15dip"
                                android:layout_marginRight="@dimen/margin_15dip"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="@string/info_birthday"
                                    android:textColor="@color/car_detials_name_text"
                                    android:textSize="@dimen/text_size_16sp" />

                                <LinearLayout
                                    android:id="@+id/brth_linearlayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/margin_35dip"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/margin_15dip"
                                    android:background="@drawable/bg_withdrawals_et"
                                    android:orientation="horizontal" >

                                    <TextView
                                        android:id="@+id/brth"
                                        android:layout_width="0dp"
                                        android:layout_height="@dimen/margin_35dip"
                                        android:layout_marginLeft="@dimen/margin_15dip"
                                        android:layout_weight="1"
                                        android:gravity="center_vertical"
                                        android:text="@string/choose_birthday"
                                        android:textColor="@color/gray_color_line"
                                        android:textSize="@dimen/text_size_14sp" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginRight="@dimen/margin_10dip"
                                        android:contentDescription="@string/app_name"
                                        android:src="@drawable/icon_down" />
                                </LinearLayout>
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_0.5dip"
                                android:layout_marginLeft="@dimen/margin_10dip"
                                android:layout_marginRight="@dimen/margin_10dip"
                                android:background="@color/gray_color_line" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_48dip"
                                android:layout_marginLeft="@dimen/margin_15dip"
                                android:layout_marginRight="@dimen/margin_15dip"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="@string/job"
                                    android:textColor="@color/car_detials_name_text"
                                    android:textSize="@dimen/text_size_16sp" />

                                <EditText
                                    android:id="@+id/job"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/margin_35dip"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/margin_15dip"
                                    android:background="@drawable/bg_withdrawals_et"
                                    android:hint="@string/input_job"
                                    android:paddingLeft="@dimen/margin_15dip"
                                    android:textColor="@color/car_detials_name_text"
                                    android:textColorHint="@color/gray_color_line"
                                    android:textSize="@dimen/text_size_14sp" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_0.5dip"
                                android:layout_marginLeft="@dimen/margin_10dip"
                                android:layout_marginRight="@dimen/margin_10dip"
                                android:background="@color/gray_color_line" />

                            <LinearLayout
                                android:id="@+id/phone"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_48dip"
                                android:layout_marginLeft="@dimen/margin_15dip"
                                android:layout_marginRight="@dimen/margin_15dip"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="@string/input_phone"
                                    android:textColor="@color/car_detials_name_text"
                                    android:textSize="@dimen/text_size_16sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="*"
                                    android:textColor="@color/car_text_orange" />

                                <EditText
                                    android:id="@+id/phone_number"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/margin_35dip"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/margin_15dip"
                                    android:background="@drawable/bg_withdrawals_et"
                                    android:hint="@string/input_phone_num"
                                    android:inputType="number"
                                    android:paddingLeft="@dimen/margin_15dip"
                                    android:textColor="@color/car_detials_name_text"
                                    android:textColorHint="@color/gray_color_line"
                                    android:textSize="@dimen/text_size_14sp" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_0.5dip"
                                android:layout_marginLeft="@dimen/margin_10dip"
                                android:layout_marginRight="@dimen/margin_10dip"
                                android:background="@color/gray_color_line" />

                            <LinearLayout
                                android:id="@+id/address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/layout_selector"
                                android:minHeight="@dimen/margin_96dip"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/margin_15dip"
                                    android:text="@string/address"
                                    android:textColor="@color/car_detials_name_text"
                                    android:textSize="@dimen/margin_16dip" />

                                <EditText
                                    android:id="@+id/address_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/margin_68dip"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/margin_15dip"
                                    android:layout_marginRight="@dimen/margin_15dip"
                                    android:background="@drawable/bg_withdrawals_et"
                                    android:ellipsize="end"
                                    android:hint="@string/input_address"
                                    android:maxLines="4"
                                    android:paddingLeft="@dimen/margin_15dip"
                                    android:textColor="@color/car_detials_name_text"
                                    android:textColorHint="@color/gray_color_line"
                                    android:textSize="@dimen/text_size_14sp" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_0.5dip"
                                android:layout_marginLeft="@dimen/margin_10dip"
                                android:layout_marginRight="@dimen/margin_10dip"
                                android:background="@color/gray_line" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_48dip"
                                android:layout_marginLeft="@dimen/margin_15dip"
                                android:layout_marginRight="@dimen/margin_15dip"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="@string/auth_card"
                                    android:textColor="@color/car_detials_name_text"
                                    android:textSize="@dimen/text_size_16sp" />

                                <EditText
                                    android:id="@+id/id_card"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/margin_35dip"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/margin_15dip"
                                    android:background="@drawable/bg_withdrawals_et"
                                    android:hint="@string/input_id_card"
                                    android:inputType="number"
                                    android:digits="0123456789x"
                                    android:paddingLeft="@dimen/margin_15dip"
                                    android:textColor="@color/car_detials_name_text"
                                    android:textColorHint="@color/gray_color_line"
                                    android:textSize="@dimen/text_size_14sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <Button
                            android:id="@+id/conifrm"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/margin_48dip"
                            android:layout_marginTop="@dimen/margin_20dip"
                            android:layout_marginBottom="@dimen/margin_10dip"
                            android:background="@drawable/confirm_btn_selector"
                            android:text="@string/withdraw_confirm"
                            android:textColor="@color/white_color"
                            android:textSize="@dimen/text_size_18sp" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pop_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.5"
            android:background="#000"
            android:orientation="vertical"
            android:visibility="gone" >
        </LinearLayout>
    </FrameLayout>

</LinearLayout>