<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LocationActivity" >

    <com.fenqipai.fenqipaiandroid.view.TitleBarView
        android:id="@+id/location_titleBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_48dip" >
    </com.fenqipai.fenqipaiandroid.view.TitleBarView>

    <com.baidu.mapapi.map.MapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clickable="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_0.5dip"
        android:background="@color/gray_color_line" />

    <android.support.v4.view.ViewPager
        android:id="@+id/location_viewpager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_96dip" />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_0.5dip"
        android:background="@color/gray_color_line" />

    <LinearLayout
        android:id="@+id/location_garden"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/light"
        android:orientation="horizontal" >
    </LinearLayout>

</LinearLayout><!-- From: file:/E:/studio-work-space/fenqipai/res/layout/activity_location.xml -->