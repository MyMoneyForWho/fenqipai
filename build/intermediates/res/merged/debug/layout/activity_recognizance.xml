<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_recognizance"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bill_bg_color"
    android:orientation="vertical" >

    <com.fenqipai.fenqipaiandroid.view.TitleBarView
        android:id="@+id/my_money_titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.fenqipai.fenqipaiandroid.view.TitleBarView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10dip"
        android:background="@drawable/bg_fragment_chamfer"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_48dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_10dip"
                android:gravity="center"
                android:text="@string/user_bail"
                android:textColor="@color/car_detials_name_text"
                android:textSize="@dimen/text_size_18sp" />

            <TextView
                android:id="@+id/my_Balance"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_5dip"
                android:gravity="center_vertical"
                android:textColor="@color/car_detials_text_red"
                android:textSize="@dimen/text_size_18sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1dip"
            android:layout_marginLeft="@dimen/margin_5dip"
            android:layout_marginRight="@dimen/margin_5dip"
            android:background="@color/orange_color" />

        <RelativeLayout
            android:id="@+id/get_out_bai"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_48dip"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_20dip"
                android:gravity="center"
                android:text="@string/get_out_bail"
                android:textColor="@color/car_details_text_grey"
                android:textSize="@dimen/text_size_16sp" />

            <ImageView
                android:id="@+id/get_out_bail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_20dip"
                android:src="@drawable/btn_in" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1dip"
            android:layout_marginLeft="@dimen/margin_10dip"
            android:layout_marginRight="@dimen/margin_10dip"
            android:background="@color/gray_color_line" />

        <RelativeLayout
            android:id="@+id/get_in_bail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_48dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_20dip"
                android:gravity="center"
                android:text="@string/get_in_bail"
                android:textColor="@color/car_text_orange"
                android:textSize="@dimen/text_size_16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_20dip"
                android:contentDescription="@string/app_name"
                android:src="@drawable/btn_in" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10dip"
        android:layout_marginRight="@dimen/margin_10dip"
        android:background="@drawable/bg_fragment_chamfer"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_48dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_10dip"
                android:gravity="center"
                android:text="@string/no_user_bail"
                android:textColor="@color/car_detials_name_text"
                android:textSize="@dimen/text_size_18sp" />

            <TextView
                android:id="@+id/my_Balance_no"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_5dip"
                android:gravity="center_vertical"
                android:textColor="@color/car_detials_price_et"
                android:textSize="@dimen/text_size_18sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1dip"
            android:layout_marginLeft="@dimen/margin_5dip"
            android:layout_marginRight="@dimen/margin_5dip"
            android:background="@color/orange_color" />

        <RelativeLayout
            android:id="@+id/money_record"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_48dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_20dip"
                android:gravity="center"
                android:text="@string/my_margin_record"
                android:textColor="@color/car_details_text_grey"
                android:textSize="@dimen/text_size_16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_20dip"
                android:contentDescription="@string/app_name"
                android:src="@drawable/btn_in" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout><!-- From: file:/E:/studio-work-space/fenqipai/res/layout/activity_recognizance.xml -->