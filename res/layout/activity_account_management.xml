<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/account_manager_lin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bill_bg_color"
    android:orientation="vertical"
    tools:context=".AddPriceActivity" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <com.fenqipai.fenqipaiandroid.view.TitleBarView
                android:id="@+id/cart_titleBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </com.fenqipai.fenqipaiandroid.view.TitleBarView>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_10dip"
                        android:layout_marginRight="@dimen/margin_10dip"
                        android:layout_marginTop="@dimen/margin_10dip"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_fragment_chamfer"
                            android:orientation="vertical"
                            android:visibility="visible" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_48dip"
                                android:layout_marginLeft="@dimen/margin_10dip"
                                android:layout_marginRight="@dimen/margin_10dip"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="@string/account_management_title"
                                    android:textColor="@color/car_detials_name_text"
                                    android:textSize="@dimen/text_size_18sp" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_1dip"
                                android:layout_marginLeft="@dimen/margin_5dip"
                                android:layout_marginRight="@dimen/margin_5dip"
                                android:background="@color/car_text_orange" />

                            <LinearLayout
                                android:id="@+id/image"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_96dip"
                                android:background="@drawable/layout_selector"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/margin_15dip"
                                    android:text="@string/head_portrait"
                                    android:textColor="@color/car_detials_name_text"
                                    android:textSize="@dimen/text_size_16sp" />

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1" />

                                <com.fenqipai.fenqipaiandroid.view.CircleImageView
                                    android:id="@+id/my_img"
                                    android:layout_width="@dimen/margin_65dip"
                                    android:layout_height="@dimen/margin_65dip"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="@dimen/margin_10dip"
                                    android:src="@drawable/user"
                                    app:border_color="#00000000"
                                    app:border_width="@dimen/my_head_portrait_padding" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="@dimen/margin_15dip"
                                    android:src="@drawable/details" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_0.5dip"
                                android:layout_marginLeft="@dimen/margin_10dip"
                                android:layout_marginRight="@dimen/margin_10dip"
                                android:background="@color/gray_line"
                                android:visibility="visible" />

                            <com.fenqipai.fenqipaiandroid.view.SettingsItemView
                                android:id="@+id/pet_name"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_48dip" >
                            </com.fenqipai.fenqipaiandroid.view.SettingsItemView>

                            <com.fenqipai.fenqipaiandroid.view.SettingsItemView
                                android:id="@+id/e_mail"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_48dip" >
                            </com.fenqipai.fenqipaiandroid.view.SettingsItemView>

                            <LinearLayout
                                android:id="@+id/login_password"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_48dip"
                                android:background="@drawable/layout_selector"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/margin_15dip"
                                    android:background="@null"
                                    android:text="@string/login_password"
                                    android:textColor="@color/car_detials_name_text"
                                    android:textSize="@dimen/margin_16dip" />

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="@dimen/margin_15dip"
                                    android:contentDescription="@string/app_name"
                                    android:src="@drawable/details" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_0.5dip"
                                android:layout_marginLeft="@dimen/margin_10dip"
                                android:layout_marginRight="@dimen/margin_10dip"
                                android:background="@color/gray_line" />

                            <LinearLayout
                                android:id="@+id/pay_password"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_48dip"
                                android:background="@drawable/layout_selector"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/margin_15dip"
                                    android:background="@null"
                                    android:text="@string/pay_password"
                                    android:textColor="@color/car_detials_name_text"
                                    android:textSize="@dimen/margin_16dip" />

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="@dimen/margin_15dip"
                                    android:contentDescription="@string/app_name"
                                    android:src="@drawable/details" />
                            </LinearLayout>
                        </LinearLayout>
                        <!-- 上端结束 -->

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/margin_10dip" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_fragment_chamfer"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_48dip"
                                android:layout_marginLeft="@dimen/margin_10dip"
                                android:layout_marginRight="@dimen/margin_10dip"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="@string/person_info"
                                    android:textColor="@color/car_detials_name_text"
                                    android:textSize="@dimen/text_size_18sp" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_1dip"
                                android:layout_marginLeft="@dimen/margin_5dip"
                                android:layout_marginRight="@dimen/margin_5dip"
                                android:background="@color/car_text_orange" />

                            <com.fenqipai.fenqipaiandroid.view.SettingsItemView
                                android:id="@+id/true_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" >
                            </com.fenqipai.fenqipaiandroid.view.SettingsItemView>

                            <com.fenqipai.fenqipaiandroid.view.SettingsItemView
                                android:id="@+id/sex"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_48dip" >
                            </com.fenqipai.fenqipaiandroid.view.SettingsItemView>

                            <com.fenqipai.fenqipaiandroid.view.SettingsItemView
                                android:id="@+id/brth"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_48dip" >
                            </com.fenqipai.fenqipaiandroid.view.SettingsItemView>

                            <com.fenqipai.fenqipaiandroid.view.SettingsItemView
                                android:id="@+id/job"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_48dip" >
                            </com.fenqipai.fenqipaiandroid.view.SettingsItemView>

                            <LinearLayout
                                android:id="@+id/phone"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_48dip"
                                android:background="@drawable/layout_selector"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/margin_15dip"
                                    android:text="@string/auth_tel"
                                    android:textColor="@color/car_detials_name_text"
                                    android:textSize="@dimen/margin_16dip" />

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1" />

                                <TextView
                                    android:id="@+id/phone_number"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="@dimen/margin_15dip"
                                    android:text="@string/can_change_the_password"
                                    android:textColor="@color/car_details_text_grey"
                                    android:textSize="@dimen/margin_16dip" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="@dimen/margin_15dip"
                                    android:src="@drawable/details"
                                    android:visibility="invisible" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_0.5dip"
                                android:layout_marginLeft="@dimen/margin_10dip"
                                android:layout_marginRight="@dimen/margin_10dip"
                                android:background="@color/gray_line" />

                            <RelativeLayout
                                android:id="@+id/address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/layout_selector"
                                android:minHeight="@dimen/margin_48dip"
                                android:orientation="horizontal" >

                                <TextView
                                    android:id="@+id/addressText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentStart="true"
                                    android:layout_marginLeft="@dimen/margin_15dip"
                                    android:text="@string/address"
                                    android:textColor="@color/car_detials_name_text"
                                    android:textSize="@dimen/margin_16dip" />

                                <TextView
                                    android:id="@+id/address_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:gravity="right"
                                    android:layout_toRightOf="@+id/addressText"
                                    android:layout_toLeftOf="@+id/settings_img_right"
                                    android:layout_marginBottom="@dimen/margin_12dip"
                                    android:layout_marginLeft="@dimen/margin_15dip"
                                    android:layout_marginRight="@dimen/margin_15dip"
                                    android:layout_marginTop="@dimen/margin_12dip"
                                    android:ellipsize="end"
                                    android:maxLines="4"
                                    android:textColor="@color/car_details_text_grey"
                                    android:textSize="@dimen/margin_16dip" />

                                <ImageView
                                    android:id="@+id/settings_img_right"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/margin_15dip"
                                    android:src="@drawable/details"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentRight="true" />
                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_0.5dip"
                                android:layout_marginLeft="@dimen/margin_10dip"
                                android:layout_marginRight="@dimen/margin_10dip"
                                android:background="@color/gray_line" />

                            <com.fenqipai.fenqipaiandroid.view.SettingsItemView
                                android:id="@+id/id_card"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_48dip" >
                            </com.fenqipai.fenqipaiandroid.view.SettingsItemView>
                        </LinearLayout>

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/margin_10dip" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pop_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.5"
            android:background="#000"
            android:orientation="vertical"
            android:visibility="gone" >
        </LinearLayout>
    </FrameLayout>

</LinearLayout>