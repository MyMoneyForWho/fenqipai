<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_recognizance"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/service_background_color"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <com.fenqipai.fenqipaiandroid.view.TitleBarView
                android:id="@+id/add_bankcard_titleBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </com.fenqipai.fenqipaiandroid.view.TitleBarView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_10dip"
                android:background="@drawable/bg_fragment_chamfer"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_48dip"
                    android:layout_marginLeft="@dimen/margin_10dip"
                    android:layout_marginRight="@dimen/margin_10dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/add_bankcard_info"
                        android:textColor="@color/car_detials_name_text"
                        android:textSize="@dimen/text_size_18sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_1dip"
                    android:layout_marginLeft="@dimen/margin_5dip"
                    android:layout_marginRight="@dimen/margin_5dip"
                    android:background="@color/car_text_orange" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_48dip"
                    android:layout_marginLeft="@dimen/margin_10dip"
                    android:layout_marginRight="@dimen/margin_10dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/withdraw_bank"
                        android:textColor="@color/car_detials_name_text"
                        android:textSize="@dimen/text_size_16sp" />

                    <LinearLayout
                        android:id="@+id/bank_et_linearlayout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_35dip"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margin_15dip"
                        android:background="@drawable/bg_withdrawals_et"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/bank_et"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/margin_35dip"
                            android:layout_marginLeft="@dimen/margin_15dip"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/withdraw_choose_bank"
                            android:textColor="@color/gray_color_line"
                            android:textSize="@dimen/text_size_14sp" />

                        <ImageView
                            android:id="@+id/more_bank"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/margin_10dip"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/icon_down" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_1dip"
                    android:layout_marginLeft="@dimen/margin_10dip"
                    android:layout_marginRight="@dimen/margin_10dip"
                    android:background="@color/gray_color_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_48dip"
                    android:layout_marginLeft="@dimen/margin_10dip"
                    android:layout_marginRight="@dimen/margin_10dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/withdraw_card"
                        android:textColor="@color/car_detials_name_text"
                        android:textSize="@dimen/text_size_16sp" />

                    <EditText
                        android:id="@+id/card_num_et"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_35dip"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margin_15dip"
                        android:background="@drawable/bg_withdrawals_et"
                        android:hint="@string/card_num"
                        android:inputType="number"
                        android:paddingLeft="@dimen/margin_15dip"
                        android:textColor="@color/car_detials_name_text"
                        android:textColorHint="@color/gray_color_line"
                        android:textSize="@dimen/text_size_14sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_1dip"
                    android:layout_marginLeft="@dimen/margin_10dip"
                    android:layout_marginRight="@dimen/margin_10dip"
                    android:background="@color/gray_color_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_48dip"
                    android:layout_marginLeft="@dimen/margin_10dip"
                    android:layout_marginRight="@dimen/margin_10dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/add_bankcard_name"
                        android:textColor="@color/car_detials_name_text"
                        android:textSize="@dimen/text_size_16sp" />

                    <EditText
                        android:id="@+id/name_et"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_35dip"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margin_15dip"
                        android:background="@drawable/bg_withdrawals_et"
                        android:hint="@string/input_name"
                        android:paddingLeft="@dimen/margin_15dip"
                        android:textColor="@color/car_detials_name_text"
                        android:textColorHint="@color/gray_color_line"
                        android:textSize="@dimen/text_size_14sp" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/add_bankcard_conifrm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_48dip"
                android:layout_margin="@dimen/margin_10dip"
                android:background="@drawable/confirm_btn_selector"
                android:text="@string/withdraw_confirm"
                android:textColor="@color/white_color"
                android:textSize="@dimen/text_size_18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pop_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.5"
            android:background="#000"
            android:orientation="vertical"
            android:visibility="gone" >
        </LinearLayout>
    </FrameLayout>

</LinearLayout>