<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/service_background_color"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <com.fenqipai.fenqipaiandroid.view.TitleBarView
                android:id="@+id/service_titleBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </com.fenqipai.fenqipaiandroid.view.TitleBarView>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/service_fix"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_80dip"
                        android:layout_margin="@dimen/margin_10dip"
                        android:background="@drawable/bg_fragment_chamfer"
                        android:baselineAligned="false"
                        android:orientation="horizontal" >

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/icon_fix" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/service_sanjiao_left" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/margin_0.1dip"
                            android:layout_marginRight="@dimen/margin_0.1dip"
                            android:layout_marginTop="@dimen/margin_0.1dip"
                            android:layout_weight="1"
                            android:background="@drawable/service_bg" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="@string/service_fix"
                                android:textColor="@color/car_detials_name_text"
                                android:textSize="@dimen/text_size_18sp" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/service_yanbao"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_80dip"
                        android:layout_marginBottom="@dimen/margin_10dip"
                        android:layout_marginLeft="@dimen/margin_10dip"
                        android:layout_marginRight="@dimen/margin_10dip"
                        android:background="@drawable/bg_fragment_chamfer"
                        android:baselineAligned="false"
                        android:orientation="horizontal" >

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/icon_yanbao" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/margin_0.1dip"
                            android:layout_marginRight="@dimen/margin_0.1dip"
                            android:layout_marginTop="@dimen/margin_0.1dip"
                            android:layout_weight="1"
                            android:background="@drawable/service_bg" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="@string/service_yanbao"
                                android:textColor="@color/car_detials_name_text"
                                android:textSize="@dimen/text_size_18sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/service_sanjiao_right" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/service_pinggu"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_80dip"
                        android:layout_marginBottom="@dimen/margin_10dip"
                        android:layout_marginLeft="@dimen/margin_10dip"
                        android:layout_marginRight="@dimen/margin_10dip"
                        android:background="@drawable/bg_fragment_chamfer"
                        android:baselineAligned="false"
                        android:orientation="horizontal" >

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/icon_pinggu" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/service_sanjiao_left" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/margin_0.1dip"
                            android:layout_marginRight="@dimen/margin_0.1dip"
                            android:layout_marginTop="@dimen/margin_0.1dip"
                            android:layout_weight="1"
                            android:background="@drawable/service_bg" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="@string/service_pinggu"
                                android:textColor="@color/car_detials_name_text"
                                android:textSize="@dimen/text_size_18sp" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/service_insurance"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_80dip"
                        android:layout_marginBottom="@dimen/margin_10dip"
                        android:layout_marginLeft="@dimen/margin_10dip"
                        android:layout_marginRight="@dimen/margin_10dip"
                        android:background="@drawable/bg_fragment_chamfer"
                        android:baselineAligned="false"
                        android:orientation="horizontal" >

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/icon_insurance" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/margin_0.1dip"
                            android:layout_marginRight="@dimen/margin_0.1dip"
                            android:layout_marginTop="@dimen/margin_0.1dip"
                            android:layout_weight="1"
                            android:background="@drawable/service_bg" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="@string/service_insurance"
                                android:textColor="@color/car_detials_name_text"
                                android:textSize="@dimen/text_size_18sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/service_sanjiao_right" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/service_maiche"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_80dip"
                        android:layout_marginBottom="@dimen/margin_10dip"
                        android:layout_marginLeft="@dimen/margin_10dip"
                        android:layout_marginRight="@dimen/margin_10dip"
                        android:background="@drawable/bg_fragment_chamfer"
                        android:baselineAligned="false"
                        android:orientation="horizontal" >

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/icon_maiche" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/service_sanjiao_left" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/margin_0.1dip"
                            android:layout_marginRight="@dimen/margin_0.1dip"
                            android:layout_marginTop="@dimen/margin_0.1dip"
                            android:layout_weight="1"
                            android:background="@drawable/service_bg" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="@string/service_maiche"
                                android:textColor="@color/car_detials_name_text"
                                android:textSize="@dimen/text_size_18sp" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/service_pingjia"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_80dip"
                        android:layout_marginBottom="@dimen/margin_10dip"
                        android:layout_marginLeft="@dimen/margin_10dip"
                        android:layout_marginRight="@dimen/margin_10dip"
                        android:background="@drawable/bg_fragment_chamfer"
                        android:baselineAligned="false"
                        android:orientation="horizontal" >

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/icon_pingjia" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/margin_0.1dip"
                            android:layout_marginRight="@dimen/margin_0.1dip"
                            android:layout_marginTop="@dimen/margin_0.1dip"
                            android:layout_weight="1"
                            android:background="@drawable/service_bg" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="@string/service_pingjia"
                                android:textColor="@color/car_detials_name_text"
                                android:textSize="@dimen/text_size_18sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/service_sanjiao_right" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pop_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.5"
            android:background="#000"
            android:orientation="vertical"
            android:visibility="gone" >
        </LinearLayout>
    </FrameLayout>

</LinearLayout>